<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/meizi_item_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/meizibg"
              android:foreground="@drawable/mid_grey_ripple"
              android:orientation="horizontal"
              android:padding="3dp"
              android:stateListAnimator="@animator/raise">

    <android.support.v7.widget.CardView
        android:id="@+id/meizi_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:scaleType="centerCrop"
        app:cardCornerRadius="3dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.atom.shuoshuo.widget.SquareCenterImageView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/meizi_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:stateListAnimator="@animator/raise"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_vertical_margin"
    android:layout_marginRight="@dimen/activity_vertical_margin"
    android:clickable="true"
    android:layout_marginTop="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <include layout="@layout/fragment_picture_item_top"/>

        <RelativeLayout
            android:id="@+id/shenping_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="visible"
            android:background="@color/mid_grey">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/shenping_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">
                    
                    <ImageView
                        android:id="@+id/shenping_one_user_avatar"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_image_black_24dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        android:id="@+id/shenping_one_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:textColor="@color/font_normal"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:text="鲁智深撸自呻撸至深"
                        android:layout_toRightOf="@id/shenping_one_user_avatar"/>

                    <com.atom.shuoshuo.widget.TextDrawable
                        android:id="@+id/shenping_one_digg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:gravity="center"
                        android:textColor="@color/font_normal"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:text="11181"
                        android:drawablePadding="10dp"
                        app:leftDrawable="@drawable/digg"
                        app:leftDrawableHeight="20dp"
                        app:leftDrawableWidth="20dp"
                        android:layout_toRightOf="@id/shenping_one_user_name"/>

                    <ImageView
                        android:id="@+id/shenping_one_share"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/share"/>

                    <TextView
                        android:id="@+id/shenping_one_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:textColor="@color/font_normal"
                        android:textSize="15sp"
                        android:text="我虽双目失明但丝毫不影响我带崩三路"
                        android:layout_below="@id/shenping_one_share"
                        android:layout_toRightOf="@id/shenping_one_user_avatar"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/shenping_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/shenping_two_user_avatar"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_image_black_24dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        android:id="@+id/shenping_two_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:textColor="@color/font_normal"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:text="鲁智深撸自呻撸至深"
                        android:layout_toRightOf="@id/shenping_two_user_avatar"/>

                    <com.atom.shuoshuo.widget.TextDrawable
                        android:id="@+id/shenping_two_digg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:gravity="center"
                        android:textColor="@color/font_normal"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:text="11181"
                        android:drawablePadding="10dp"
                        app:leftDrawable="@drawable/digg"
                        app:leftDrawableHeight="20dp"
                        app:leftDrawableWidth="20dp"
                        android:layout_toRightOf="@id/shenping_two_user_name"/>

                    <ImageView
                        android:id="@+id/shenping_two_share"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/share"/>

                    <TextView
                        android:id="@+id/shenping_two_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="30dp"
                        android:textColor="@color/font_normal"
                        android:textSize="15sp"
                        android:text="我虽双目失明但丝毫不影响我带崩三路我虽双目失明但丝毫不影响我带崩三路"
                        android:layout_below="@id/shenping_two_share"
                        android:layout_toRightOf="@id/shenping_two_user_avatar"/>
                </RelativeLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/shenping"/>

        </RelativeLayout>

        <include layout="@layout/fragment_picture_item_bottom"/>
    </LinearLayout>
</android.support.v7.widget.CardView>